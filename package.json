{
  "name": "powerstack-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "env-cmd ts-node-dev --no-deps --no-notify --respawn src/index",
    "start": "env-cmd node ./dist",
    "build": "tsc -b",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\""
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^2.0.0",
    "@blockmatic/prettier-config": "^2.0.0",
    "@types/node": "^16.9.1",
    "@types/react-transition-group": "^4.4.5",
    "env-cmd": "^10.1.0",
    "eslint": "7",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "env-var": "^7.0.1",
    "express": "^4.18.1",
    "graphql-voyager": "^1.0.0-rc.31",
    "ts-node-dev": "^2.0.0",
    "tslog": "^3.2.2"
  }
}